<% if logged_in? %>
<h1>企業一覧</h1>

<ul>
<%= form_tag companies_path do %>
  <%= text_field_tag :search, '', placeholder: "企業名" %>
  <%= submit_tag "検索" ,name: nil ,class: "btn btn-outline-primary"%>
<% end %>
  <% @companies.each do |company| %>
    <li class="card-deck">
      <div class="card">
        <div class="card-body">
          <div class="container">
            <div class="row align-items-center">
              <% if company.image.attached? %>
                <%= image_tag company.image.variant(resize: "64x64!"), class: "img-thumbnail rounded-circle" %>
              <% else %>
                <%= image_tag "/company.png", class: 'img-thumbnail rounded-circle' %>
              <% end %>
              <div class="col-sm">
                <%= company.name %>
              </div>
              <div class="col-sm">
                <%= company.telephone %>
              </div>
              <div class="col-xs">
                <%= link_to "詳細", company_path(company), class: "btn btn-outline-info" %>
                <%= link_to "削除", company, method: :delete, class: "btn btn-outline-danger", data: { confirm: '本当に削除してよろしいでしょうか？' }  %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>
  <%= paginate @companies %>
<% else %>
  <%= render "sessions/login_form" %>
<% end %>