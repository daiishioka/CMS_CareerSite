<% if logged_in? %>
<h1>企業一覧</h1>
  <% @companies.each do |company| %>
    <li class="card-deck">
      <div class="card">
        <div class="card-body">
          <div class="container">
            <div class="row align-items-center">
              <% if company.image.attached? %>
                <%= image_tag company.image %>
              <% else %>
                <%= image_tag "/company.png", class: 'rounded-circle' %>
              <% end %>
              <div class="col-sm">
                <%= company.name %>
              </div>
              <div class="col-sm">
                <%= company.telephone %>
              </div>
              <div class="col-xs">
                <%= link_to "詳細", company_path(company), class: "btn btn-info" %>
                <%= link_to "削除", company, method: :delete, class: "btn btn-danger", data: { confirm: '本当に削除してよろしいでしょうか？' }  %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate @companies %>
<% else %>
  <%= render "sessions/login_form" %>
<% end %>