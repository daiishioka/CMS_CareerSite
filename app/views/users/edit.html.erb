<%= link_to "戻る", users_path, class: "btn btn-outline-secondary btn-circle" %>
<h1>転職希望者情報編集</h1>

<%= form_for(@user) do |f| %>
  <div class="form-group" style="width:25%">
    <%= f.label :image, "アイコン" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  

  
  <div class="form-group">
    <%= f.label :birthday, "生年月日" %>
    <%= raw sprintf(
                f.date_select(
                  :birthday,
                  use_month_numbers: true,
                  start_year: 1930,
                  end_year: (Time.now.year - 18),
                  default: Date.new(1989, 1, 1),
                  date_separator: '%s'),
                '年 ', '月 ') + '日' %>
  </div>
  
  <div class="form-group">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :telephone, "電話番号" %>
    <%= f.text_field :telephone, class: "form-control" %> 
  </div>

  <div class="form-group" style="width:25%">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :academic_background, "最終学歴" %>
    <%= f.text_field :academic_background, class: "form-control" %>
  </div>
  
  <%= f.submit '投稿', class: "btn btn-outline-primary" %>
<% end %>

