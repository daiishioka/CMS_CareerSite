<%= link_to "戻る", @recruit.company, class: "btn btn-outline-secondary btn-circle" %>
<h1>
  求人詳細ページ
  <%= link_to "編集", edit_recruit_path(@recruit), class: 'btn btn-outline-info' %>
  <%= link_to "削除", @recruit, method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: 'btn btn-outline-danger' %>
</h1>

<div class="recruit">
  <h3>求人タイトル</h3>
  <h4><%= @recruit.title %></h4>
  
  <h3>募集背景</h3>
  <p><%= @recruit.recruitment_background %></p><br>
  
  <h3>仕事内容</h3>
  <p><%= @recruit.job_description %></p><br>
  
  <h3>募集要項</h3>
    <table class="table table-bordered" id="recruit">
      <tbody>
        <tr>
          <th style="width:20%"><i class="fas fa-briefcase"></i> 募集職種</th>
          <td>項目１</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-file-alt"></i> 雇用形態</th>
          <td>項目４</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-check"></i> 応募資格</th>
          <td>項目７</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-map-marker-alt"></i> 勤務地</th>
          <td>項目１</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-clock"></i> 勤務時間</th>
          <td>項目４</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-yen-sign"></i> 給与</th>
          <td>項目７</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-heart"></i> 待遇・福利厚生</th>
          <td>項目７</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-calendar-alt"></i> 休暇</th>
          <td>項目７</td>
        </tr>
      </tbody>
    </table>
  
  <h3>選考方法</h3>
    <table class="table table-bordered" id="recruit">
      <tbody>
        <tr>
          <th style="width:20%"><i class="fas fa-envelope"></i> 応募方法</th>
          <td>項目１</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-info-circle"></i> 選考プロセス</th>
          <td>項目４</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-map-marker-alt"></i> 面接地</th>
          <td>項目７</td>
        </tr>
        <tr>
          <th scope="row"><i class="fas fa-user-alt"></i> 担当者</th>
          <td>項目１</td>
        </tr>
      </tbody>
    </table>
</div>