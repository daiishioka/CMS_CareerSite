<h1>担当者情報編集</h1>

<%= form_for(@member) do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :sex, "性別" %><br>
    <label><%= f.radio_button :sex, "男性" %>男性</label>
    <label><%= f.radio_button :sex, "女性" %>女性</label>
  </div>

  <div class="form-group">
    <%= f.label :telephone, "電話番号" %>
    <%= f.text_field :telephone, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email, "メールアドレス" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :belonged_company, "所属企業" %>
    <%= f.text_field :belonged_company, class: "form-control" %>
  </div>
  
  <%= f.submit "編集", class: "btn btn-primary" %>

<% end %>